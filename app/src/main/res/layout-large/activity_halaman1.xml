<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Halaman1">

    <RelativeLayout
        android:id="@+id/logoup"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/up">

        <ImageButton
            android:layout_width="103dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="440dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/payment" />

        <TextView
            android:id="@+id/isi"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="148dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="162dp"
            android:text="Username"
            android:textColor="@color/colorputih"
            android:textSize="26dp"
            android:textStyle="bold"

            />

        <ImageView
            android:id="@+id/profil"
            android:layout_width="79dp"
            android:layout_height="71dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="58dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="464dp"
            android:src="@drawable/b" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/isi"
            android:layout_alignStart="@+id/isi"
            android:layout_marginStart="0dp"
            android:text="Activate"
            android:textSize="20dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/button3" />

    </RelativeLayout>

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="230dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/bg_indikator"
        app:auto_cycle="true"
        app:corner_radius="20"
        app:delay="0">

    </com.denzcoskun.imageslider.ImageSlider>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/logo1" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_below="@+id/slider"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonsmartplug" />

    <TextView
        android:id="@+id/tsmartplug"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="2dp"
        android:text="SMARTPLUG"
        android:textColor="@color/colorhijau"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_below="@+id/slider"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/smartlamp" />

    <TextView
        android:id="@+id/tsmartlamp"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_alignEnd="@+id/imageButton2"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="2dp"
        android:text="SMARTLAMP"
        android:textColor="@color/colorhijau"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_below="@+id/tsmartlamp"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="62dp"
        android:background="@drawable/sensor" />

    <TextView
        android:id="@+id/tsensor"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageButton3"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_alignEnd="@+id/imageButton3"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="2dp"
        android:text="SENSOR"
        android:textColor="@color/colorhijau"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_below="@+id/tsmartplug"
        android:layout_alignEnd="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/battery" />

    <TextView
        android:id="@+id/tbattery"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageButton4"
        android:layout_alignStart="@+id/imageButton4"
        android:layout_alignEnd="@+id/imageButton4"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="2dp"
        android:text="BATTERY"
        android:textColor="@color/colorhijau"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <ImageView
        android:layout_width="425dp"
        android:layout_height="259dp"
        android:layout_below="@+id/tbattery"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-16dp"
        android:background="@drawable/footer1" />


</RelativeLayout>