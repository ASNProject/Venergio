<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SmartPlug">

    <ImageView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:src="@drawable/veern"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/jsmartplug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:text="SMARTPLUG"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:id="@+id/qw"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/jsmartplug"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <ToggleButton
            android:layout_width="126dp"
            android:layout_height="97dp"
            android:layout_marginTop="50dp"
            android:layout_centerVertical="true"
            android:id="@+id/toogle1"
            android:background="@drawable/isian"/>

        <TextView
            android:layout_width="48dp"
            android:layout_height="22dp"
            android:layout_below="@id/toogle1"
            android:layout_alignStart="@+id/toogle1"
            android:layout_alignEnd="@+id/toogle1"
            android:layout_marginStart="38dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:text="PLUG 1"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/toogle2"
            android:layout_width="126dp"
            android:layout_height="97dp"
            android:layout_marginTop="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/isian"/>

        <TextView
            android:layout_width="51dp"
            android:layout_height="21dp"
            android:layout_below="@id/toogle2"
            android:layout_alignStart="@+id/toogle2"
            android:layout_alignEnd="@+id/toogle2"
            android:layout_marginStart="38dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:text="PLUG 2"
            android:textStyle="bold" />



    </RelativeLayout>

    <Button
        android:id="@+id/btnschedule"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qw"
        android:layout_marginTop="35dp"
        android:background="@drawable/isian"
        android:text="Schedule"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/i"
        android:orientation="vertical">

        <TextView
            android:id="@+id/isi"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Profil"
            android:layout_below="@+id/profil"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/profil"
            android:layout_width="59dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/b"
            android:layout_centerHorizontal="true"/>

        <ImageView

            android:id="@+id/conn"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/a" />
        <ImageView

            android:id="@+id/set"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/d" />




    </RelativeLayout>

</RelativeLayout>